{# Render the field prototype for form fields #}
<div class="webbb-form-field">
	<div class="row-fluid">
		<div class="span4">
			{{ form_row(form.label) }}
		</div>
		<div class="span4">
			{{ form_row(form.type) }}
		</div>
		<div class="span4">
			{{ form_row(form.validation) }}
		</div>
	</div>

	<div class="row-fluid">
		<div class="span4">
			{{ form_row(form.defaultValue) }}
		</div>
		<div class="span4">
			{{ form_row(form.css) }}
		</div>
		<div class="span4">
			{{ form_row(form.sortorder) }}
		</div>
	</div>

	<div class="row-fluid">
		<div class="span6">
			{{ form_row(form.description) }}
		</div>
		<div class="span6">
			{{ form_row(form.parent) }}
		</div>
	</div>

	{{ form_rest(form) }}
</div><!-- /.webbb-form-field -->
