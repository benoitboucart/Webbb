{% extends 'WebbbFormBundle::layout.html.twig' %}

{% block webbbadmin_main_content -%}
    <h1>Rendered form</h1>

    <table class="record_properties">
        <tbody>
            {#<tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>#}
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Thankyoutext</th>
                <td>{{ entity.thankyoutext }}</td>
            </tr>
            <tr>
                <th>Recipients</th>
                <td>{{ entity.recipients }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ entity.message }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Fields</th>
                <td>
                    <ul>
                    {% for field in entity.fields %}
                        <li>{{ field.name }}</li>
                    {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>


    <form action="{##}" method="post" {{ form_enctype(generated_form) }}>
        {#<input type="hidden" name="_method" value="PUT" />#}
        {{ form_errors(generated_form) }}

        {{ form_rest(generated_form) }}
        
        <p>
            <button type="submit">Submit</button>
        </p>
    </form>


    <div class="btn-toolbar">
        <div class="btn-group record_actions">
            <a href="{{ path('form') }}" class="btn btn-primary">
                Back to the list
            </a>
            <a href="{{ path('form_edit', { 'id': entity.id }) }}" class="btn">
                Edit
            </a>
        </div><!-- /.btn-group -->
    </div><!-- /.btn-toolbar -->
{% endblock %}
